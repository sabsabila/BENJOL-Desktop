<Window:MyWindow  xmlns:Window="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
        x:Class="TestWPPL.Service.ServiceEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Service" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label x:Name="lblQuestion" Grid.Column="1">New Service</Label>
        <TextBox x:Name="txtAnswer" Grid.Column="1" Grid.Row="1" MinWidth="250" />

        <WrapPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" x:Name="saveButton" Click="btnSaveService_Click" MinWidth="60" Margin="0,0,10,0" Background="#FFFBB308" BorderBrush="{x:Null}" Foreground="#FF636363">_Save</Button>
            <Button IsCancel="True" x:Name="cancelButton" Click="btnCancel_Click" MinWidth="60" Background="#FFFBB308" BorderBrush="{x:Null}" Foreground="#FF636363">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window:MyWindow>
