<basic:MyPage x:Class="TestWPPL.Dashboard.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPPL.Dashboard"
      xmlns:lineChart="clr-namespace:Velacro.Chart.LineChart;assembly=Velacro"
      xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      mc:Ignorable="d" 
      d:DesignHeight="500"  d:DesignWidth="1000"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
      FontFamily="{StaticResource Muli}"
      Title="Dashboard">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Background="#FFF0F0F7">
            <Rectangle Fill="White" HorizontalAlignment="Left" Height="250" Width="655"  VerticalAlignment="Top" Margin="21,22,0,0"/>
            <Border BorderBrush="{x:Null}" HorizontalAlignment="Left" Height="160" Width="160" VerticalAlignment="Top" Margin="456,46,0,0" CornerRadius="80,80,80,80">
                <Border.Background>
                    <ImageBrush x:Name="bengkelPicture" ImageSource="/Image/camera-placeholder.jpg"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="bengkelName" Foreground="#FFFBB308" Text="name" HorizontalAlignment="Left" Margin="40,54,0,0" VerticalAlignment="Top" FontSize="24" Width="244"/>
            <TextBlock x:Name="email" Foreground="#636363" Text="email" HorizontalAlignment="Left" Margin="40,148,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.81,2.562" FontSize="16"/>
            <TextBlock x:Name="telephone" Foreground="#636363" Text="telphone" HorizontalAlignment="Left" Margin="40,114,0,0" VerticalAlignment="Top" FontSize="16"/>
            <TextBlock x:Name="address" Foreground="#FF636363" Text="address" HorizontalAlignment="Left" Margin="40,182,0,0" VerticalAlignment="Top" FontSize="16"/>
            <Rectangle HorizontalAlignment="Left" Height="145" Margin="18,298,0,0" Fill="#b2f7b9" VerticalAlignment="Top" Width="206"/>
            <Rectangle HorizontalAlignment="Left" Height="145" Margin="246,298,0,0" Fill="#f6f7b2" VerticalAlignment="Top" Width="206"/>
            <Rectangle HorizontalAlignment="Left" Height="145" Margin="474,298,0,0" Fill="#ff8c8c" VerticalAlignment="Top" Width="204"/>
            <Rectangle HorizontalAlignment="Left" Height="200" Margin="696,22,0,0" Fill="#FFFCCA53" VerticalAlignment="Top" Width="246"/>
            <Rectangle HorizontalAlignment="Left" Height="200" Margin="696,244,0,0" Fill="#dbdbdb" VerticalAlignment="Top" Width="246"/>
            <Label Content="Bookings Done" HorizontalAlignment="Left" Margin="28,308,0,0" VerticalAlignment="Top" Height="41" Width="160" FontSize="16"/>
            <Label Content="Bookings Upcoming" HorizontalAlignment="Left" Margin="256,308,0,0" VerticalAlignment="Top" Height="41" Width="206" FontSize="16"/>
            <Label Content="Bookings Canceled" HorizontalAlignment="Left" Margin="484,308,0,0" VerticalAlignment="Top" Height="41" Width="160" FontSize="16"/>
            <Label Content="Total Revenue" HorizontalAlignment="Left" Margin="706,31,0,0" VerticalAlignment="Top" Height="41" Width="125" FontSize="16"/>
            <Label Content="Unpaid Services" HorizontalAlignment="Left" Margin="706,259,0,0" VerticalAlignment="Top" Height="41" Width="140" FontSize="16"/>
            <TextBlock x:Name="bookingsDone" HorizontalAlignment="Left" Margin="44,354,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="74" Width="168" TextAlignment="Right" FontWeight="Bold" FontSize="48"/>
            <TextBlock x:Name="bookingsUpcoming" HorizontalAlignment="Left" Margin="274,354,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="74" Width="168" TextAlignment="Right" FontWeight="Bold" FontSize="48"/>
            <TextBlock x:Name="bookingsCanceled" HorizontalAlignment="Left" Margin="496,354,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="74" Width="168" TextAlignment="Right" FontWeight="Bold" FontSize="48"/>
            <TextBlock x:Name="totalRevenue" HorizontalAlignment="Left" Margin="706,142,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="74" Width="226" TextAlignment="Right" FontWeight="Bold" FontSize="36"/>
            <TextBlock x:Name="unpaidServices" HorizontalAlignment="Left" Margin="706,365,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="74" Width="226" TextAlignment="Right" FontWeight="Bold" FontSize="36"/>
            <Label Content="Rp." HorizontalAlignment="Left" Margin="706,77,0,0" VerticalAlignment="Top" Height="58" Width="73" FontWeight="Bold" FontSize="36"/>
            <Label Content="Rp." HorizontalAlignment="Left" Margin="706,300,0,0" VerticalAlignment="Top" Height="58" Width="73" FontWeight="Bold" FontSize="36"/>
        </Grid>
    </ScrollViewer>
</basic:MyPage>
