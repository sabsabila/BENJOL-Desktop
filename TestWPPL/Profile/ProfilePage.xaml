<Page:MyPage  xmlns:Page="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro" x:Class="TestWPPL.Profile.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPPL.Profile"
      mc:Ignorable="d" 
      FontFamily="{StaticResource Muli}" 
      d:DesignHeight="600" d:DesignWidth="635"
      Title="ProfilePage">

    <Grid Background="#FFF0F0F7">
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="495" Margin="65,22,0,0" VerticalAlignment="Top" Width="504"/>
        <Label Background="#FFF0F0F7" Content="Account Info" HorizontalAlignment="Left" Margin="90,41,0,0" VerticalAlignment="Top" Foreground="#FF636363" FontSize="18"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="95,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTxt" HorizontalAlignment="Left" Height="30" Margin="95,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button Style="{StaticResource MaterialDesignFlatLightBgButton }" x:Name="updateBtn" Content="Update" HorizontalAlignment="Left" Margin="368,542,0,0" VerticalAlignment="Top" Width="97" Background="#FFFBB308" BorderBrush="{x:Null}" Foreground="#636363"/>
        <Button Style="{StaticResource MaterialDesignFlatLightBgButton }" x:Name="logoutBtn" Content="Logout" HorizontalAlignment="Left" Margin="481,542,0,0" VerticalAlignment="Top" Width="88" Background="#FFFBB308" BorderBrush="{x:Null}" Foreground="#636363"/>
        <Label Content="Phone Number" HorizontalAlignment="Left" Margin="95,142,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="phoneTxt" PreviewTextInput="phoneTxt_PreviewTextInput" HorizontalAlignment="Left" Height="30" Margin="127,168,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="95,203,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="emailTxt" HorizontalAlignment="Left" Height="30" Margin="95,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="95,259,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addressTxt" HorizontalAlignment="Left" Height="30" Margin="95,285,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Image x:Name="picture" HorizontalAlignment="Left" Height="136" Margin="397,120,0,0" VerticalAlignment="Top" Width="144" Source="/TestWPPL;component/Image/camera-placeholder.jpg"/>
        <Label x:Name="image" Content="Picture" HorizontalAlignment="Left" Margin="397,89,0,0" VerticalAlignment="Top"/>
        <Button Style="{StaticResource MaterialDesignFlatLightBgButton }" x:Name="uploadBtn" Content="Upload" HorizontalAlignment="Left" Margin="397,267,0,0" VerticalAlignment="Top" Width="135" Background="#FFFBB308" BorderBrush="{x:Null}" Foreground="#636363"/>
        <Label Content="+62" HorizontalAlignment="Left" Margin="95,168,0,0" VerticalAlignment="Top" Width="32"/>
        <Label Content="Change Password" HorizontalAlignment="Left" Margin="95,339,0,0" VerticalAlignment="Top" Width="123" FontWeight="Bold"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="2" Margin="218,353,0,0" VerticalAlignment="Top" Width="323"/>
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="95,370,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="95,433,0,0" VerticalAlignment="Top" Width="94"/>
        <PasswordBox x:Name="oldPassword" HorizontalAlignment="Left" Margin="95,401,0,0" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="newPassword" HorizontalAlignment="Left" Margin="95,464,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Page:MyPage>
