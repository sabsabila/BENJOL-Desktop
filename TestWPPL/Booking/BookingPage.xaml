<Page:MyPage xmlns:Page="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      x:Class="TestWPPL.Booking.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestWPPL.Booking"
      mc:Ignorable="d" 
      Title="BookingPage">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFF0F0F7">
        
        <Label Content="Antrian Booking" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#FF636363" FontSize="24"/>
        <ListView x:Name="bookingList" HorizontalAlignment="Stretch" Height="Auto" Margin="20,70,20,70" VerticalAlignment="Stretch" Width="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding booking_id}" Header="#" Width="40"/>
                    <GridViewColumn DisplayMemberBinding="{Binding first_name}" Header="NAME" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding repairment_note}" Header="PROBLEM" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding repairment_date}" Header="DATE" Width="110"/>
                    <GridViewColumn DisplayMemberBinding="{Binding service_name}" Header="SERVICE" Width="150"/>
                    <GridViewColumn Header="ACTION" Width="110">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="PickUp" HorizontalAlignment="Center" Background="#FFFCCA53" Foreground="#FF636363" Content="Pick Up" Click="PickUpButton_OnClick"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page:MyPage>
